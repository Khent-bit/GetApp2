<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".BraceMapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageMenu2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/ic_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/subject"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/mindmap_rectangle1"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="228dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_send" />

                <EditText
                    android:id="@+id/subtopic2"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="150dp"
                    android:background="@drawable/mindmap_rectangle2"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:text=""
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="357dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_send" />

                    <EditText
                        android:id="@+id/sub1subtopic1"
                        android:layout_width="300dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/mindmap_rectangle3"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:text=""
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="228dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_send" />

                    <EditText
                        android:id="@+id/sub1subtopic2"
                        android:layout_width="159dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/mindmap_rectangle3"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:text=""
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="228dp"
                    android:layout_height="50dp"
                    app:srcCompat="@android:drawable/ic_menu_send" />

                <EditText
                    android:id="@+id/subtopic1"
                    android:layout_width="80dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="176dp"
                    android:layout_marginEnd="206dp"
                    android:background="@drawable/mindmap_rectangle2"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:text=""
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/sub2subtopic2"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="355dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/mindmap_rectangle3"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text=""
            android:textSize="10sp" />

        <EditText
            android:id="@+id/sub2subtopic1"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="294dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/mindmap_rectangle3"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text=""
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/mindmap_bottom_menu"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:rotation="180"
                android:rotationX="180"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="?attr/actionModeShareDrawable" />

            <ImageButton
                android:id="@+id/btnExport"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@android:drawable/stat_sys_download" />

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_head_layout"
        app:menu="@menu/mindmap_menu">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>