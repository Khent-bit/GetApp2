<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".BraceMapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageMenu2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/ic_menu" />

        <EditText
            android:id="@+id/subject"
            android:layout_width="64dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="256dp"
            android:background="@drawable/mindmap_rectangle1"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Fast Food Chains"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="175dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="{"
            android:textAlignment="center"
            android:textSize="100dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="272dp"
            android:layout_marginEnd="180dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="{"
            android:textAlignment="center"
            android:textSize="100dp" />

        <EditText
            android:id="@+id/subtopic1"
            android:layout_width="80dp"
            android:layout_height="77dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="176dp"
            android:layout_marginEnd="206dp"
            android:background="@drawable/mindmap_rectangle2"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="USA"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/subtopic2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="315dp"
            android:layout_marginEnd="213dp"
            android:background="@drawable/mindmap_rectangle2"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Philippines"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sub1subtopic1"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="158dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/mindmap_rectangle3"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Popeyes"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sub1subtopic2"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/mindmap_rectangle3"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="In n Out"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sub2subtopic2"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="355dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/mindmap_rectangle3"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Mang Inasal"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sub2subtopic1"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="294dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/mindmap_rectangle3"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Jollibee"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="288dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="{"
            android:textAlignment="center"
            android:textSize="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/mindmap_bottom_menu"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:rotation="180"
                android:rotationX="180"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <ImageButton
                android:id="@+id/btnExport"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@android:drawable/stat_sys_download" />

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_head_layout"
        app:menu="@menu/mindmap_menu">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>